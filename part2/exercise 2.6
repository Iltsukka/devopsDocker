version: '3.8'

services:
  front-end:
    build: ../devopsExampleRepo/example-frontend
    container_name: this-is-frontv2
    ports:
    - 5000:5000
  back-end:
    build: ../devopsExampleRepo/example-backend
    container_name: this-is-backv2
    ports:
    - 8080:8080
    environment:
    - REDIS_HOST=cache
    - POSTGRES_HOST=db
    - POSTGRES_PASSWORD=example
  cache:
    image: redis
  db:
    image: postgres:17.2
    restart: unless-stopped
    environment:
    - POSTGRES_PASSWORD=example
